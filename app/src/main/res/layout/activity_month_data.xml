    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthData">

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
